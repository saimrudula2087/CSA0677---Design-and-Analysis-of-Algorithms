#include <stdio.h>

int findMissingPositive(int arr[], int n)
 {
    int i;
    int max = 0;
    for (i = 0; i < n; i++)
	{
        if (arr[i] > max)
            max = arr[i];
    }
    int mark[max + 1];
    for (i = 0; i <= max; i++)
	  {
          mark[i] = 0;
      }
    for (i = 0; i < n; i++)
	 {
        if (arr[i] > 0 && arr[i] <= max)
            mark[arr[i]] = 1;
    }
    for (i = 1; i <= max; i++)
	 {
        if (mark[i] == 0) 
		{
            return i;
        }
    }
    return max + 1; 
}

int main()
 {
    int arr[] = {1,2,4,5};
    int n = sizeof(arr) / sizeof(arr[0]);
    int missing = findMissingPositive(arr, n);
    printf("The smallest positive integer missing is: %d\n", missing);
    return 0;
}
