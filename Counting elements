#include <stdio.h>
#include <stdlib.h>
int findMax(int* arr, int size) {
    int max = arr[0];
    for (int i = 1; i < size; i++) {
        if (arr[i] > max) {
            max = arr[i];
        }
    }
    return max;
}
int countElements(int* arr, int size) {
    if (size == 0) return 0;
    
    int max = findMax(arr, size);
    int* hashTable = (int*)calloc(max + 2, sizeof(int));
    int count = 0;
    for (int i = 0; i < size; i++) {
        hashTable[arr[i]]++;
    }
    for (int i = 0; i < size; i++) {
        if (hashTable[arr[i] + 1] > 0) {
            count++;
        }
    }
    
    free(hashTable);
    return count;
}

int main() {
    int arr1[] = {1, 2, 3};
    int size1 = sizeof(arr1) / sizeof(arr1[0]);
    printf("Count: %d\n", countElements(arr1, size1));

    int arr2[] = {1, 1, 3, 3, 5, 5, 7, 7};
    int size2 = sizeof(arr2) / sizeof(arr2[0]);
    printf("Count: %d\n", countElements(arr2, size2)); 

    int arr3[] = {1, 3, 2, 3, 5, 0};
    int size3 = sizeof(arr3) / sizeof(arr3[0]);
    printf("Count: %d\n", countElements(arr3, size3));

    int arr4[] = {1, 1, 2, 2};
    int size4 = sizeof(arr4) / sizeof(arr4[0]);
    printf("Count: %d\n", countElements(arr4, size4));

    return 0;
}
