#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Function to check if the pattern matches the string
int isMatch(char *s, char *p) {
    int m = strlen(s);
    int n = strlen(p);
    int i = 0, j = 0;
    int prevMatch = 0;

    while (i < m && j < n) {
        if (p[j] == '.') {
            i++;
            j++;
        } else if (p[j] == '*') {
            prevMatch = j;
            j++;
        } else if (s[i] == p[j]) {
            i++;
            j++;
        } else {
            if (prevMatch >= 0) {
                j = prevMatch;
                i--;
            } else {
                return 0;
            }
        }
    }

    // Check if the remaining characters in the pattern are all '*'
    while (j < n && p[j] == '*') {
        j++;
    }

    return j == n;
}

int main() {
    char *s = "aa";
    char p = "a";
    printf("%d\n", isMatch(s, p));  // Output: 1
    return 0;
}
