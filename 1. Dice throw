#include <stdio.h>
#include <string.h>
int findWays(int N, int M, int X) {
    int dp[N+1][X+1];
    memset(dp, 0, sizeof(dp));
    dp[0][0] = 1;
    for (int i = 1; i <= N; i++) {
        for (int j = 1; j <= X; j++) {
            dp[i][j] = 0;
            for (int k = 1; k <= M && k <= j; k++) {
                dp[i][j] += dp[i-1][j-k];
            }
        }
    }

    return dp[N][X];
}

int main() {
    int N = 3, M = 6, X = 8;
    printf("Number of ways to get sum %d using %d dice with %d faces: %d\n", X, N, M, findWays(N, M, X));
    return 0;
}
