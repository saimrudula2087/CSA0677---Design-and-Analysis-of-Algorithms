#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int myAtoi(char *s) {
    int sign = 1;
    int num = 0;
    int i = 0;

    // Step 1: Read in and ignore any leading whitespace
    while (s[i] == ' ') {
        i++;
    }

    // Step 2: Check if the next character is '-' or '+'
    if (s[i] == '-' || s[i] == '+') {
        sign = (s[i] == '-') ? -1 : 1;
        i++;
    }

    // Step 3: Read in next the characters until the next non-digit character
    while (s[i] >= '0' && s[i] <= '9') {
        num = num * 10 + (s[i] - '0');
        i++;
    }

    // Step 4: Convert the digits into an integer
    num *= sign;

    // Step 5: Clamp the integer if it is out of the 32-bit signed integer range
    if (num < INT_MIN) {
        num = INT_MIN;
    } else if (num > INT_MAX) {
        num = INT_MAX;
    }

    return num;
}

int main() {
    char s[] = "   -42";
    printf("%d\n", myAtoi(s));  
    return 0;
}
