#include <stdio.h>
#include <stdlib.h>
double findMedian(int *arr1, int n, int *arr2, int m) {
    int i = 0, j = 0, k = 0;
    int merged[2 * (n + m)];
    int count = 0;
    while (i < n && j < m) {
        if (arr1[i] < arr2[j]) {
            merged[k++] = arr1[i++];
        } else {
            merged[k++] = arr2[j++];
        }
    }
    while (i < n) {
        merged[k++] = arr1[i++];
    }
    while (j < m) {
        merged[k++] = arr2[j++];
    }
    for (i = 0; i < k - 1; i++) {
        for (j = i + 1; j < k; j++) {
            if (merged[i] > merged[j]) {
                int temp = merged[i];
                merged[i] = merged[j];
                merged[j] = temp;
            }
        }
    }
    if (k % 2 == 0) {
        return (merged[k / 2 - 1] + merged[k / 2]) / 2.0;
    } else {
        return merged[k / 2];
    }
}
int main() {
    int arr1[] = {90, 240, 300};
    int arr2[] = {10, 13, 14, 20, 25};
    int n = sizeof(arr1) / sizeof(arr1[0]);
    int m = sizeof(arr2) / sizeof(arr2[0]);

    printf("The median of the two arrays is: %f\n", findMedian(arr1, n, arr2, m));

    return 0;
}
