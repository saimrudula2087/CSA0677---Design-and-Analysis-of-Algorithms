#include <stdio.h>
#include <stdbool.h>
#include <string.h>
bool dictionaryContains(char* word) {
    char dictionary[][10] = {"mobile", "samsung", "sam", "sung", "man", "mango",
                             "icecream", "and", "go", "i", "like", "ice", "cream"};
    int size = sizeof(dictionary) / sizeof(dictionary[0]);
    for (int i = 0; i < size; i++)
        if (strcmp(dictionary[i], word) == 0)
            return true;
    return false;
}
void printAllWords(char* str, int n, char* result, int resultSize) {
    for (int i = 1; i <= n; i++) {
        char prefix[i+1];
        strncpy(prefix, str, i);
        prefix[i] = '\0';

        if (dictionaryContains(prefix)) {
            if (i == n) {
                strncpy(result + resultSize, prefix, i);
                result[resultSize + i] = '\0';
                printf("%s\n", result);
                return;
            }
            strncpy(result + resultSize, prefix, i);
            result[resultSize + i] = ' ';
            printAllWords(str + i, n - i, result, resultSize + i + 1);
        }
    }
}

void wordTrap(char* str) {
    int size = strlen(str);
    char result[size * 2];
    printAllWords(str, size, result, 0);
}

int main() {
    char str[] = "ilikesamsung";
    wordTrap(str);
    return 0;
}
