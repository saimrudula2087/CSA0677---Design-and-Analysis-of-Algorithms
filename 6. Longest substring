#include <stdio.h>
#include <string.h>
#include <ctype.h>
int isNice(char* s, int start, int end) {
    int upper[26] = {0};
    int lower[26] = {0};

    for (int i = start; i <= end; i++) {
        if (isupper(s[i])) {
            upper[s[i] - 'A'] = 1;
        } else if (islower(s[i])) {
            lower[s[i] - 'a'] = 1;
        }
    }

    for (int i = 0; i < 26; i++) {
        if ((upper[i] && !lower[i]) || (!upper[i] && lower[i])) {
            return 0;
        }
    }

    return 1;
}
char* longestNiceSubstring(char* s) {
    int maxLen = 0;
    int startIdx = 0;
    int n = strlen(s);
    
    for (int i = 0; i < n; i++) {
        for (int j = i; j < n; j++) {
            if (isNice(s, i, j)) {
                int len = j - i + 1;
                if (len > maxLen) {
                    maxLen = len;
                    startIdx = i;
                }
            }
        }
    }

    if (maxLen == 0) {
        return "";
    }

    static char result[101];
    strncpy(result, &s[startIdx], maxLen);
    result[maxLen] = '\0';
    
    return result;
}

int main() {
    char s[] = "YazaAay";
    char* result = longestNiceSubstring(s);
    printf("Longest nice substring: %s\n", result);
    
    return 0;
}
