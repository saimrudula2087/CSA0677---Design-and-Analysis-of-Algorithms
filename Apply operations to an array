
#include <stdio.h>

void shiftZeros(int nums[], int n) {
    for (int i = 0; i < n - 1; i++) {
        if (nums[i] == nums[i + 1]) {
            nums[i] *= 2;
            nums[i + 1] = 0;
        }
    }

    int writeIndex = 0;
    for (int i = 0; i < n; i++) {
        if (nums[i] != 0) {
            nums[writeIndex++] = nums[i];
        }
    }

    while (writeIndex < n) {
        nums[writeIndex++] = 0;
    }
}

int main() {
    int nums[] = {1, 2, 2, 1, 1, 0};
    int n = sizeof(nums) / sizeof(nums[0]);

    shiftZeros(nums, n);

    printf("Output: [");
    for (int i = 0; i < n; i++) {
        printf("%d", nums[i]);
        if (i < n - 1) {
            printf(", ");
        }
    }
    printf("]\n");

    return 0;
}
