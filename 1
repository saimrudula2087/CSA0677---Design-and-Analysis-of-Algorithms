#include <stdio.h>
void printArray(int arr[], int size) {
    printf("[");
    for (int i = 0; i < size; i++) {
        if (i != 0) {
            printf(", ");
        }
        printf("%d", arr[i]);
    }
    printf("]\n");
}

int main() {
    int arr1[] = {};
    int arr2[] = {1};
    int arr3[] = {7, 7, 7, 7};
    int arr4[] = {-5, -1, -3, -2, -4};

    printArray(arr1, 0); // Expected Output: []
    printArray(arr2, 1); // Expected Output: [1]
    printArray(arr3, 4); // Expected Output: [7, 7, 7, 7]
    printArray(arr4, 5); // Expected Output: [-5, -4, -3, -2, -1]

    return 0;
}
