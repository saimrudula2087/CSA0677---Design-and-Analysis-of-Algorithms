#include<stdio.h>
void reverseString(char *str);
int main() 
{
    char str[100];
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    printf("Reversed string: ");
    reverseString(str);
    printf("\n");
}
void reverseString(char *str) 
{
    if (*str == '\0')
        return;
    reverseString(str + 1);
    putchar(*str);
}
